<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_gradient_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Top decorative elements -->
        <View
            android:id="@+id/topDecorativeShape1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="-60dp"
            android:background="@drawable/decorative_circle"
            android:alpha="0.1" />

        <View
            android:id="@+id/topDecorativeShape2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/decorative_circle"
            android:alpha="0.08" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="@drawable/circular_button_background"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back" />

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo and Title Section -->
            <LinearLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <!-- Teacher Icon with Background -->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/teacher_role_background"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/teacherIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_teacher_white"
                        android:contentDescription="Teacher Icon" />

                </RelativeLayout>

                <!-- Title -->
                <TextView
                    android:id="@+id/loginTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Login"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/loginSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back! Access your teaching dashboard"
                    android:textColor="@color/splash_text_secondary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:alpha="0.9"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- Login Form -->
            <LinearLayout
                android:id="@+id/loginFormSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Teacher ID/Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/teacherIdLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:hint="Teacher ID or Email"
                    app:startIconDrawable="@drawable/ic_teacher"
                    app:startIconTint="@color/black"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/teacherIdEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/input_hint_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Password"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/black"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/input_icon_color"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/input_hint_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remember Me and Forgot Password Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Remember Me -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/rememberMeCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/splash_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remember me"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />

                    <!-- Forgot Password -->
                    <TextView
                        android:id="@+id/forgotPasswordText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="@color/splash_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Login Button -->
                <LinearLayout
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/primary_button_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="24dp"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_login"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Teacher Verification Notice -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verified"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your account will be verified within 24-48 hours after registration"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="12sp"
                        android:alpha="0.8" />

                </LinearLayout>

                <!-- OR Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/splash_text_secondary"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="16dp"
                        android:alpha="0.7" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/splash_text_secondary"
                        android:alpha="0.3" />

                </LinearLayout>

                <!-- Quick Access Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Profile Status Button -->
                    <LinearLayout
                        android:id="@+id/profileStatusButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_button_background"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_status"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Status"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Help/Support Button -->
                    <LinearLayout
                        android:id="@+id/helpButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/secondary_button_background"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_help"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need Help?"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Sign Up Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New teacher? "
                    android:textColor="@color/splash_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Now"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Loading Container -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/registration_gradient_background"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <!-- Loading Spinner -->
            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/white"
                android:layout_marginBottom="24dp" />

            <!-- Loading Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signing you in..."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Bottom decorative elements -->
        <View
            android:id="@+id/bottomDecorativeShape"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/decorative_circle"
            android:alpha="0.06" />

        <!-- Floating elements -->
        <View
            android:id="@+id/floatingElement1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/floating_dot"
            android:alpha="0.5" />

        <View
            android:id="@+id/floatingElement2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/floating_dot"
            android:alpha="0.4" />

    </RelativeLayout>

</ScrollView>