<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_arrow_back_white"
                android:background="@drawable/circular_button_background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:id="@+id/registrationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Registration"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Profile Photo Section -->
        <LinearLayout
            android:id="@+id/profilePhotoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Photo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Profile Photo Container -->
            <RelativeLayout
                android:id="@+id/profilePhotoContainer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/profile_photo_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/profilePhotoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/profilePhotoPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_camera_white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photo"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <!-- Personal Details Section -->
        <LinearLayout
            android:id="@+id/personalDetailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Full Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullNameLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Full Name"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Age and Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Age -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ageLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:hint="Age"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/input_hint_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender Spinner -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/input_hint_color"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Phone Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Phone Number"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Email Address"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter Password"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addressLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Complete Address"
                app:startIconDrawable="@drawable/ic_location"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Educational Details Section -->
        <LinearLayout
            android:id="@+id/educationalDetailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educational Qualifications"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Highest Qualification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest Qualification"
                    android:textColor="@color/input_hint_color"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/qualificationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Institution Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/institutionLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Institution/University Name"
                app:startIconDrawable="@drawable/ic_school"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/institutionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Years of Experience -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/experienceLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Years of Teaching Experience"
                app:startIconDrawable="@drawable/ic_experience"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/experienceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/input_hint_color" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Subjects and Streams Section -->
        <LinearLayout
            android:id="@+id/subjectsStreamsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teaching Specialization"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Subjects Taught -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subjects You Can Teach"
                android:textColor="@color/input_hint_color"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Subjects Checkboxes -->
            <LinearLayout
                android:id="@+id/subjectsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Mathematics -->
                <CheckBox
                    android:id="@+id/mathCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Physics -->
                <CheckBox
                    android:id="@+id/physicsCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physics"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Chemistry -->
                <CheckBox
                    android:id="@+id/chemistryCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chemistry"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Biology -->
                <CheckBox
                    android:id="@+id/biologyCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biology"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- English -->
                <CheckBox
                    android:id="@+id/englishCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Other -->
                <CheckBox
                    android:id="@+id/otherSubjectsCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other (Please specify)"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary" />

                <!-- Other Subject Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otherSubjectLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Specify other subjects"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otherSubjectEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/input_hint_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Teaching Streams -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teaching Streams/Classes"
                android:textColor="@color/input_hint_color"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Streams Checkboxes -->
            <LinearLayout
                android:id="@+id/streamsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 10th Class -->
                <CheckBox
                    android:id="@+id/class10Checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10th Class (CBSE/State Board)"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- 12th Class -->
                <CheckBox
                    android:id="@+id/class12Checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12th Class (CBSE/State Board)"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- NEET -->
                <CheckBox
                    android:id="@+id/neetCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEET Preparation"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- JEE -->
                <CheckBox
                    android:id="@+id/jeeCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JEE Preparation"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Foundation -->
                <CheckBox
                    android:id="@+id/foundationCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foundation (6th-9th Class)"
                    android:textColor="@color/white"
                    android:buttonTint="@color/splash_primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Documents Section -->
        <LinearLayout
            android:id="@+id/documentsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Documents"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Aadhar Card -->
            <LinearLayout
                android:id="@+id/aadharUploadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/document_upload_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_document"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Card"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aadharStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to upload"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_upload"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- PAN Card -->
            <LinearLayout
                android:id="@+id/panUploadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/document_upload_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_document"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAN Card"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/panStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to upload"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_upload"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Degree Certificate -->
            <LinearLayout
                android:id="@+id/degreeUploadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/document_upload_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_certificate"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest Degree Certificate"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/degreeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to upload"
                        android:textColor="@color/splash_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_upload"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Additional Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• All documents should be clear and readable\n• Supported formats: JPG, PNG, PDF\n• Maximum file size: 5MB per document"
                android:textColor="@color/splash_text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:alpha="0.8"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/termsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/splash_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I agree to the Terms and Conditions and Privacy Policy"
                android:textColor="@color/splash_text_secondary"
                android:textSize="10sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp">

            <!-- Save Draft Button -->
            <LinearLayout
                android:id="@+id/saveDraftButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button_background"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_save"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Draft"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Continue Button -->
            <LinearLayout
                android:id="@+id/continueButton"
                android:layout_width="0dp"
